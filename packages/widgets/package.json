{
  "name": "@dassh/widgets",
  "version": "0.1.0",
  "private": true,
  "description": "Widget base classes and templates for dassh project",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./base": {
      "types": "./src/base/index.ts",
      "default": "./src/base/index.ts"
    },
    "./templates": {
      "types": "./src/templates/index.ts",
      "default": "./src/templates/index.ts"
    },
    "./prebuilt": {
      "types": "./src/prebuilt/index.ts",
      "default": "./src/prebuilt/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "dependencies": {
    "@dassh/shared": "workspace:*",
    "@dassh/ui": "workspace:*",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "typescript": "^5.9.2",
    
    "@dassh/eslint-config": "workspace:*",
    "@dassh/typescript-config": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}